<Window x:Class="MVVMPexeso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMPexeso"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel>
            <Label FontSize="50" HorizontalAlignment="Center">Pexeso</Label>            
            <Button Margin="20 10"  Command="{Binding StartCommand}" >Start Game</Button>
            <Label HorizontalAlignment="Center">Score:</Label>
            <Label HorizontalAlignment="Center" FontSize="40" Foreground="Green" Content="{Binding Score}"/>
            <Slider x:Name="BoardSizeSlider" Margin="5,0,5,0" SmallChange="1" Minimum="3" Maximum="9" TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="ValueChanged">
                        <behaviors:InvokeCommandAction 
                Command="{Binding BoardSizeChangedCommand}" 
                CommandParameter="{Binding Value, ElementName=BoardSizeSlider}" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </Slider>
            <Slider x:Name="PlayerCountSlider" Margin="5,0,5,0" SmallChange="1" Minimum="1" Maximum="5" TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="ValueChanged">
                        <behaviors:InvokeCommandAction 
    Command="{Binding PlayerCountChangedCommand}" 
    CommandParameter="{Binding Value, ElementName=PlayerCountSlider}" />
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </Slider>
        </StackPanel>

        <ItemsControl ItemsSource="{Binding UISquares}" Grid.Column="1">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="{Binding GridSize}"
                         Columns="{Binding GridSize}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <!--Šablona pro jednotlivé karty (budou to obyčejná tlačítka s TextBlockem uvnitř) -->
            <ItemsControl.ItemTemplate>
                <DataTemplate> 
                    <!--Command: co se provede po kliknutí na tlačítko karty-->
                    <!--CommandParametr: předá se kliknutá karta jako parametr příkazu -->
                    <Button
                    Command="{Binding DataContext.SquareClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                    CommandParameter="{Binding}" 
                    FontSize="24"
                    Margin="5"
                    Background="{Binding Brush}">
                    <Button.Style>
                        <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderThickness" Value="5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    </Button>

                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
